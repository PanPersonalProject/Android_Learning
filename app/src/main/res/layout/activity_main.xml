<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.main.MainActivity">


    <Button
        android:id="@+id/btNet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="net request example" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:rowCount="2">

        <pan.lib.baseandroidframework.ui.views.DashBoardView
            android:layout_width="160dp"
            android:layout_height="160dp" />

        <pan.lib.baseandroidframework.ui.views.PieChartView
            android:layout_width="160dp"
            android:layout_height="160dp" />

        <pan.lib.baseandroidframework.ui.views.CircleImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@mipmap/bj" />

        <pan.lib.baseandroidframework.ui.views.SportsView
            android:layout_width="160dp"
            android:layout_height="160dp" />


    </GridLayout>


</LinearLayout>


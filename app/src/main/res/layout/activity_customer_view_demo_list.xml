<?xml version="1.0" encoding="utf-8"?>

<!-- res/layout/activity_customer_view_demo_list.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/button_demo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="各种自定义View"/>

    <Button
        android:id="@+id/button_demo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="控件测量Demo"/>

    <Button
        android:id="@+id/button_scale_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手势缩放imageview"/>

    <Button
        android:id="@+id/button_multi_touch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多指拖动imageview"/>

    <Button
        android:id="@+id/button_paint_multi_touch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多指触控画笔"/>

    <Button
        android:id="@+id/button_two_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义viewpager"/>

    <Button
        android:id="@+id/button_drag_listener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drag Listener"/>

    <Button
        android:id="@+id/button_drag_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drag Helper"/>

    <Button
        android:id="@+id/button_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scroll"/>

    <Button
        android:id="@+id/button_canvas_coordinate_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="canvas坐标系测试"/>

    <!-- 确保为CustomerViewDemoActivity.Type中定义的每一个类型都创建了一个Button -->

</LinearLayout>